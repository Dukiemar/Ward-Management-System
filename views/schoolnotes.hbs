<div class="col-md-2">
        <h3><a class="btn btn-secondary" href="/view/{{id}}"><i class="fa fa-chevron-left" ></i> Back</a></h3>
    </div>
<h3>{{viewTitle}}</h3>
<form action="/school/{{id}}" method="POST"  autocomplete="off">
<input type="hidden" name="wardid" value= {{id}}>
 <div class="form-group col-md-6">
        <label>Report Date</label>
        <input type="date" class="form-control" name="dateofreport">
    </div>
 <div class="form-group col-md-4">
            <label>Overall Average(%):</label>
            <input type="text" class="form-control" name="avg" placeholder="%">
 </div>

<div class="form-row">
<div class="form-group col-md-4">
        <label for="aptitide">Aptitude:</label>
        <select class="form-control" name="aptitude" id="aptitude">
            <option value=5>Excellent</option>
            <option value=4>Very Good</option>
            <option value=3>Good</option>
            <option value=2>Satisfactory</option>
            <option value=1>Needs Improvement</option>
        </select>
</div>
<div class="form-group col-md-4">
        <label for="workattitude">Attitude to work:</label>
        <select class="form-control" name="workattitude" id="workattitude">
            <option value=5>Excellent</option>
            <option value=4>Very Good</option>
            <option value=3>Good</option>
            <option value=2>Satisfactory</option>
            <option value=1>Needs Improvement</option>
        </select>
</div>
<div class="form-group col-md-4">
        <label for="peerattitude">Attitude to peers:</label>
        <select class="form-control" name="peerattitude" id="peerattitude">
            <option value=5>Excellent</option>
            <option value=4>Very Good</option>
            <option value=3>Good</option>
            <option value=2>Satisfactory</option>
            <option value=1>Needs Improvement</option>
        </select>
</div>
<div class="form-group col-md-4">
        <label for="deportment">Deportment:</label>
        <select class="form-control" name="deportment" id="deportment">
            <option value=5>Excellent</option>
            <option value=4>Very Good</option>
            <option value=3>Good</option>
            <option value=2>Satisfactory</option>
            <option value=1>Needs Improvement</option>
        </select>
</div>
<div class="form-group col-md-4">
        <label for="socialinteractions">Social Interaction:</label>
        <select class="form-control" name="socialinteractions" id="socialinteractions">
            <option value=5>Excellent</option>
            <option value=4>Very Good</option>
            <option value=3>Good</option>
            <option value=2>Satisfactory</option>
            <option value=1>Needs Improvement</option>
        </select>
</div>
</div>
 <div class="form-group">
    <label for="notes">Add Notes:</label>
    <textarea class="form-control" name="snotes" id="snotes" rows="5"></textarea>
 </div>
  <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
 </div>
</form>

<h5>NOTES LOG:</h5>
<ol>
    {{#each snotes}}<!--mednotes is not a random name,must be same name of the database field and the field name in the server route-->
        <li>
            <strong>{{this.snotes}}</strong> <br>Date of entry: {{this.dateofreport}}<br>
        </li>
    {{/each}}
</ol>