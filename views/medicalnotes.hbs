<div class="col-md-2">
        <h3><a class="btn btn-secondary" href="/view/{{id}}"><i class="fa fa-chevron-left" ></i> Back</a></h3>
    </div>
<h3>{{viewTitle}}</h3>
<form action="/medical/{{id}}" method="POST"  autocomplete="off">
<input type="hidden" name="wardid" value= {{id}}>
 <div class="form-group col-md-6">
        <label>Date of Visit</label>
        <input type="date" class="form-control" name="dateofvisit" placeholder="Date of Visit">
    </div>
<div class="form-row">
<div class="form-group col-md-4">
        <label for="physicalabuse">Are there signs of physical abuse?</label>
        <select class="form-control" name="physicalabuse" id="physicalabuse">
            <option value="no">No</option>
            <option value="yes">Yes</option>
        </select>
</div>
<div class="form-group col-md-4">
        <label for="sexualabuse">Are there signs of sexual abuse?</label>
        <select class="form-control" name="sexualabuse" id="sexualabuse">
            <option value="no">No</option>
            <option value="yes">Yes</option>
        </select>
</div>

<div class="form-group col-md-4">
        <label for="distress">Are there signs of psychological distress?</label>
        <select class="form-control" name="distress" id="distress">
            <option value="no">No</option>
            <option value="yes">Yes</option>
        </select>
</div>
</div>
 <div class="form-group">
    <label for="mednotes">Add Notes:</label>
    <textarea class="form-control" name="mednotes" id="mednotes" rows="5"></textarea>
 </div>
 
  <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
 </div>
</form>

<h5>NOTES LOG:</h5>
<ol>
    {{#each mednotes}}<!--mednotes is not a random name,must be same name of the database field and the field name in the server route-->
        <li>
            <strong>{{this.mednotes}}</strong> <br>Date of entry: {{this.dateofvisit}}<br>
        </li>
    {{/each}}
</ol>


